     public void entnahme(){

     while(lagerbestand > entmenge){

     //lagerbestand = lagerbestand-entmenge;
     if(lagerbestand < mindeststueckzahl){
     System.out.println("Automatische Nachbestellung erfolgt, da der Mindeststückzahl unterschritten worden ist");    
     bestellmenge=mindeststueckzahl - lagerbestand;
     lagerbestand=lagerbestand+bestellmenge;
     }lagerbestand = lagerbestand-entmenge;

     }  System.out.println("\nEntnahme nicht möglich: Lagerbestand überschritten");
     
    // lagerbestand=lagerbestand-entmenge;

  }

